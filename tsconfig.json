{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": false, // eslint will still complain softly
		"noImplicitReturns": true,
		"importHelpers": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"noEmit": true,
		"types": [
			"jest",
			"node",
		],
		"paths": {
			"@/*": [
				"src/*"
			],
		},
		"lib": [
			"esnext",
		]
	},
	"include": [
		"src/**/*.ts",
		"tests/*.ts",
	],
	"exclude": [
		"tests/fixture/**/*.ts",
		"node_modules"
	]
}
