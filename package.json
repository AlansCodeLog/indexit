{
	"name": "indexit",
	"description": "A small cli app for managing (auto-filling) javascript/typescript index files.",
	"version": "0.0.0-semantically-released",
	"bin": "bin/index.js",
	"scripts": {
		"babel:run": "npx babel-node --extensions \".ts,.js\" --",

		"build:babel": "npx babel --extensions \".ts,.js\" src --out-dir bin --source-maps inline",
		"build:watch": "npm run build:babel --watch",
		"build:clean": "rm -rf bin && npm run build",
		"build": "npm run build:babel && npm run build:shebang",
		"build:shebang": "node -e \"const fs = require('fs'); fs.writeFileSync('./bin/index.js', '#!/usr/bin/env node\\n' + fs.readFileSync('./bin/index.js'))\"",

		"lint:eslint": "npx eslint \"{src,tests}/**/*.{js,ts}\" \"*.{js,ts}\" --max-warnings=0 --report-unused-disable-directives",
		"lint:types": "npx tsc --noEmit --pretty",
		"lint:commits": "npx commitlint --from $(git rev-list HEAD --not --remotes | tail -1)^ --to HEAD --verbose",
		"lint": "npm run lint:types && npm run lint:eslint",

		"coverage": "npm run test -- --coverage",
		"coverage:dev": "npx http-server coverage/lcov-report --port=5000 & onchange -k -i \"jest.config.js\" --  npm run coverage -- --watch",

		"test": "npx jest test --verbose",
		"test:debug": "node --inspect-brk node_modules/jest/bin/jest test --verbose",
		"test:inspect-errors": "set INSPECT_ERRORS=true && npx test",

		"indexit": "npm run babel:run src/indexit.ts --",
		"gen:exports": "npm run indexit update",

		"actions:debug": "act -r -j build-only",

		"audit:prod": "yarn audit --level moderate --groups dependencies",

		"prepare": "npm run build"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run build && npm run lint && npm run test -- --no-cache",
			"pre-push": "npm run lint:commits"
		}
	},
	"dependencies": {
		"@alanscodelog/utils": "beta",
		"fast-glob": "^3.2.4",
		"yargs": "^16.1.1"
	},
	"devDependencies": {
		"@types/node": "14.14.10",

		"semantic-release": "^17.3.0",
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/commit-analyzer": "^8.0.1",
		"@semantic-release/github": "^7.2.0",
		"@semantic-release/npm": "^7.0.9",
		"@semantic-release/release-notes-generator": "^9.0.1",
		"conventional-changelog-conventionalcommits": "^4.5.0",
		"@alanscodelog/semantic-release-config": "^1.0.2",
		"@alanscodelog/commitlint-config": "^1.0.2",
		"commitlint": "^11.0.0",

		"@babel/cli": "^7.12.8",
		"@babel/core": "^7.12.9",
		"@babel/node": "^7.12.6",
		"@babel/preset-env": "^7.12.7",
		"@babel/preset-typescript": "^7.12.7",
		"@babel/plugin-proposal-export-namespace-from": "^7.12.1",
		"@babel/plugin-proposal-class-properties": "^7.12.1",
		"babel-plugin-module-resolver": "^4.0.0",
		"@alanscodelog/babel-preset": "^1.0.4",
		"core-js": "^3.8.0",

		"eslint": "^7.15.0",
		"eslint-import-resolver-typescript": "^2.3.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-simple-import-sort": "^6.0.1",
		"eslint-plugin-jsdoc": "^30.7.8",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"@alanscodelog/eslint-config": "beta",

		"chai": "^4.2.0",
		"jest": "^26.6.3",
		"babel-jest": "^26.6.3",
		"jest-watch-typeahead": "^0.6.1",
		"@types/chai": "^4.2.14",
		"@types/jest": "^26.0.16",

		"typescript": "^4.1.2",
		"@alanscodelog/tsconfigs": "^2.1.2",

		"husky": "^4.3.4",
		"onchange": "^7.1.0",
		"http-server": "^0.12.3"
	},
	"author": "Alan <alanscodelog@gmail.com>",
	"repository": "https://github.com/alanscodelog/indexit",
	"license": "MIT",
	"files": [
		"src",
		"bin"
	],
	"eslintIgnore": ["tests/fixtures/**"],
	"release": { "extends": [ "@alanscodelog/semantic-release-config" ] },
	"commitlint": { "extends": [ "@alanscodelog" ] },
	"babel": { "presets": [ "@alanscodelog" ] },
	"browserslist": "maintained node versions",
	"engines": { "node": ">=10.0.0" },
	"@comments": {
		"scripts": {
			"lint:commits": "Lints all unpushed commits in the active branch.",
			"test:inspect_errors":"For use with my inspect_error utility function from @alanscodelog/utils",
			"prepare": "Needed so that if we pull the package from git it will get built and installed properly.",
			"actions:debug": "For debugging github build action locally with nektos/act. Requires act and docker. Note: Cache will never work locally because of https://github.com/nektos/act/issues/285"
		}
	},
	"TEMPLATE:4df5c37": "Ignore. Commit of the template this was created with / last updated to."
}

